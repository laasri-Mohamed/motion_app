<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/backf"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PFAv1.1.4"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="140dp"
        ></TextView>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cameraButton"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="START COUNTING"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:background="#3254a8"
        ></Button>
    <ToggleButton
        android:id="@+id/switchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="59dp"
        android:checked="false"
        android:onClick="onSwitchClick"
        android:textOff="OFF"
        android:textOn="ON"
        android:textColor="#1b9114"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch to back camera"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-36dp"
        />

    <ToggleButton
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="59dp"
        android:textOff="OFF"
        android:textOn="ON"
        android:textColor="#1b9114"/>
    <TextView
        android:id="@+id/switchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Movement images"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-36dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="59dp"
        android:text="Set the delay of detection :"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <SeekBar
        android:id="@+id/senBar"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="10dp"
        android:max="60"
        android:progress="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/description"
        android:textColor="#000000"
        android:padding="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
        </LinearLayout>